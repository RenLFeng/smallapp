/* pages/location/studentSignState/index.wxss */

.top-info {
  background: #fff;
}

.top-info>view {
  padding: 10px 10px;
}

.member-n {
  padding: 5px;
}

.merber-list {
  padding-bottom: 110px;
}

.footer {
  position: fixed;
  width: 100%;
  height: 180rpx;
  bottom: 0;
  left: 0;
  background: #fff;
  padding: 10px;
}

.footer .btn-text text {
  width: 50%;
  display: block;
  height: 40px;
  line-height: 40px;
  font-weight: 500;
}

.footer .btn-text .share-wrap {
  width: 50%;
  height: 40px;
  line-height: 40px;
  font-weight: 500;
}

.footer .btn-text .share {
  font-weight: 500;
  background: none !important;
  width: 100% !important;
}

.footer .wrap {
  width: 100%;
  padding: 20px 0;
}

.type {
  padding: 0;
}

.type .item {
  display: inline-block;
}

.type .tips {
  color: #ff8900;
}

.van-navbr-wrap {
  position: relative;
  z-index: 99;
  width: 100vw;
  height: 108rpx;
  overflow: hidden;
  background: #fff;
  border-bottom: 1px solid #ccc;
}
.van-navbr-wrap .ul{
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
}
.van-navbr-wrap .ul .li{
  display: flex;
  width: 104rpx;
  height: 108rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}
.van-navbr-wrap .ul .li{
  color: #5d5d5d;
}
.van-navbr-wrap .ul .li.active{
  color: #0089FF;
}
.move-bar {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 104rpx;
  height: 6rpx;
  background: #0089ff;
}