/* pages/scan.wxss */
.scan-wrap {
    position: relative;
    width: 100%;
    height: 100vh;
}

.scan-main {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    background: #0089ff;
    font-size: 30rpx;
    padding: 10px 30px;
    border-radius: 5px;

}