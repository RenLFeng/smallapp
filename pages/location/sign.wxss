.tips{
  position: absolute;
  width: 100%;
  height: 30px;
  color: #333;
  bottom: 138rpx;
  left: 50%;
  transform: translate(-50%,0);
}
.temp{
  position: fixed;
  width: 100%;
  height: 100vh;
  min-height: 100vh;
}